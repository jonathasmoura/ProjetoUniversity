@model IEnumerable<PortalEscola.WEB.Models.Inscricao>

@{
    ViewBag.Title = "Index";
}

<h2>Inscrição</h2>

<p>
    @Html.ActionLink("Cadastrar nova inscrição", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Curso.NomeCurso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estudante.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grau)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.NomeCurso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estudante.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grau)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.InscricaoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.InscricaoId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.InscricaoId })
        </td>
    </tr>
}

</table>
